{
  "name": "wolfiai-b2b",
  "version": "1.0.0",
  "description": "WolfiAI B2B - Copiloto Financiero para PyMEs",
  "private": true,
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "dev": "concurrently \"pnpm --filter backend start:dev\" \"pnpm --filter frontend dev\"",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "start": "concurrently \"pnpm --filter backend start:prod\" \"pnpm --filter frontend start\"",
    "db:migrate": "pnpm --filter backend db:migrate",
    "db:seed": "pnpm --filter backend db:seed",
    "db:studio": "pnpm --filter backend db:studio",
    "db:generate": "pnpm --filter backend db:generate",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "install-all": "pnpm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "pnpm": "^10.15.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
